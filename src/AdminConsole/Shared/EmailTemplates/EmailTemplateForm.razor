@namespace SmallsOnline.PasswordExpirationNotifier.AdminConsole.Shared.EmailTemplates

@inherits ComponentBase

<div class="row">
    <div class="col-12">
        <EditForm Model="@EmailTemplateConfig" OnSubmit="@HandleFormSubmitAsync">
            <div class="row">
                <div class="col">
                    <label class="fw-bold form-label">
                        ID:
                    </label>
                    <InputText @bind-Value="EmailTemplateConfig.Id" class="form-control" disabled readonly />
                </div>
            </div>
            <div class="row pt-2">
                <div class="col">
                    <label class="form-label fw-bold">
                        Template name:
                    </label>
                    <InputText @bind-Value="EmailTemplateConfig.TemplateName" class="form-control" />
                </div>
            </div>
            <div class="row pt-2">
                <div class="col">
                    <label class="form-label fw-bold">
                        Description
                    </label>
                    <InputText @bind-Value="EmailTemplateConfig.TemplateDescription" class="form-control" />
                </div>
            </div>
            <div class="row pt-2">
                <div class="col">
                    <label class="form-label fw-bold">
                        Send as user:
                    </label>
                    <InputText @bind-Value="EmailTemplateConfig.TemplateSendAsUser" class="form-control" />
                </div>
            </div>
            <div class="row pt-2">
                <div class="col">
                    <label class="form-label fw-bold">
                        HTML:
                    </label>
                    <InputTextArea @bind-Value="EmailTemplateConfig.TemplateHtml" class="form-control font-monospace" rows="15" />
                </div>
            </div>
            <div class="row pt-2">
                <div class="d-flex">
                    <div>
                        <h2>
                            Attachments
                        </h2>
                    </div>
                    <div class="ms-3 flex-shrink-1">
                        <button class="btn btn-success" onclick="@HandleAddAttachment" type="button">
                            Add
                        </button>
                    </div>
                </div>
                @if (_attachmentItems is not null)
                {
                    @foreach (var attachmentItem in _attachmentItems)
                    {
                        <div class="col-12 col-md-6 col-lg-4 p-2">
                            <div class="card">
                                <div class="card-body">
                                    <EmailAttachmentItemForm AttachmentItem="attachmentItem">
                                        <button class="btn btn-danger" @onclick="() => HandleDeleteAttachment(attachmentItem)" type="button">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </EmailAttachmentItemForm>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col">
                        <p>
                            No attachments
                        </p>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-end pt-2">
                <button class="btn btn-primary" type="submit">
                    Submit
                </button>
            </div>
        </EditForm>
    </div>
</div>